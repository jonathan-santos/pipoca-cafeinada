<link rel="stylesheet" href='index.css'>

<main class='index'>
    <img class='top-image' src="pipoca.jpg">

    <h1>Posts</h1>

    <% site.posts.each(function(post, i) { %>
        <div class='post'>
            <div class='detalhes'>
                <div class="tags">
                    <% post.tags.each(function(tag, i) { %>
                        <span class='tag'><%- tag.name %></span>
                    <% }) %>
                </div>
                <span class='data'><%- post.date %></span>
            </div>
            
            <h2 class='title'><%- post.title %></h2>
            <p class='excerpt'><%- post.excerpt %></p>
        </div>
    <% }) %>
</main>